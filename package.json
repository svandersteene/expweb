{
    "name": "experimental-web-the-game",
    "description": "Xplore Group TimesheetCode requester GUI",
    "version": "0.1.0",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "gatsby develop -H 0.0.0.0 -p 3000 --open",
        "clean": "rm -rf public/ && rm -rf .cache/",
        "test": "jest --watch --coverageDirectory=./coverage",
        "flow:watch": "flow --color=always && watchman-make -p \"src/**/*.js\" --make \"clear && yarn run\" -t \"flow --color=always\"",
        "styleguidist": "styleguidist server --config conf/styleguide.config.js",
        "build": "yarn build:lint && yarn build:test && yarn build:gatsby",
        "build:gatsby": "gatsby build",
        "build:lint": "yarn run build:lint:scripts && yarn run build:lint:styles && yarn run build:lint:flow",
        "build:lint:flow": "flow",
        "build:lint:scripts": "eslint \"src/**/*.js\"",
        "build:lint:styles": "stylelint \"src/**/*.{scss|css}\"",
        "build:test": "jest --ci --coverageDirectory=./coverage",
        "build:development": "yarn build:coverage && yarn build:styleguidist",
        "build:coverage": "mv ./coverage/lcov-report ./public/__coverage",
        "build:styleguidist": "styleguidist build --config conf/styleguide.config.js"
    },
    "dependencies": {
        "@material-ui/core": "^3.6.0",
        "@material-ui/icons": "^3.0.1",
        "aframe": "^0.9.2",
        "aframe-react": "^4.4.0",
        "apollo-boost": "^0.1.23",
        "classnames": "^2.2.6",
        "gatsby": "^2.0.53",
        "gatsby-image": "^2.0.20",
        "gatsby-link": "^2.0.7",
        "gatsby-plugin-web-font-loader": "^1.0.4",
        "gatsby-source-filesystem": "^2.0.8",
        "gatsby-transformer-remark": "^2.3.0",
        "gatsby-transformer-sharp": "^2.1.8",
        "isomorphic-fetch": "^2.2.1",
        "lodash.set": "^4.3.2",
        "qs": "^6.6.0",
        "react": "^16.7.0",
        "react-apollo": "^2.3.3",
        "react-div-100vh": "^0.3.4",
        "react-dom": "^16.6.3",
        "react-helmet": "^5.2.0",
        "yup": "^0.26.6"
    },
    "devDependencies": {
        "@babel/core": "^7.2.0",
        "@babel/plugin-proposal-class-properties": "^7.2.1",
        "@babel/plugin-proposal-decorators": "^7.2.0",
        "@babel/plugin-proposal-do-expressions": "^7.2.0",
        "@babel/plugin-proposal-export-default-from": "^7.2.0",
        "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
        "@babel/plugin-proposal-function-bind": "^7.2.0",
        "@babel/plugin-proposal-json-strings": "^7.2.0",
        "@babel/plugin-proposal-logical-assignment-operators": "^7.2.0",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.2.0",
        "@babel/plugin-proposal-numeric-separator": "^7.2.0",
        "@babel/plugin-proposal-optional-chaining": "^7.2.0",
        "@babel/plugin-proposal-throw-expressions": "^7.2.0",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.3.4",
        "@babel/preset-env": "^7.2.0",
        "@babel/preset-flow": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "@babel/register": "^7.0.0",
        "autoprefixer": "^9.4.2",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^23.6.0",
        "camelcase": "^5.0.0",
        "css-loader": "^2.1.0",
        "enzyme": "^3.7.0",
        "enzyme-adapter-react-16": "^1.7.0",
        "enzyme-to-json": "^3.3.5",
        "eslint": "^5.9.0",
        "eslint-config-prettier": "^3.3.0",
        "eslint-loader": "^2.1.1",
        "eslint-plugin-flowtype": "^3.2.0",
        "eslint-plugin-graphql": "^3.0.1",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.11.1",
        "file-loader": "^3.0.1",
        "flow-bin": "^0.89.0",
        "flow-typed": "^2.5.1",
        "gatsby-plugin-eslint": "^2.0.1",
        "gatsby-plugin-manifest": "^2.0.9",
        "gatsby-plugin-offline": "^2.0.24",
        "gatsby-plugin-react-helmet": "^3.0.2",
        "gatsby-plugin-sass": "^2.0.6",
        "gatsby-plugin-sharp": "^2.0.12",
        "gatsby-plugin-stylelint": "^3.0.1",
        "husky": "^1.2.0",
        "identity-obj-proxy": "^3.0.0",
        "image-webpack-loader": "^4.6.0",
        "jest": "^23.6.0",
        "jsinspect": "zakdoek/jsinspect",
        "lint-staged": "^8.1.0",
        "node-sass": "^4.10.0",
        "plop": "^2.2.0",
        "postcss-import": "^12.0.1",
        "postcss-loader": "^3.0.0",
        "prettier": "^1.15.3",
        "react-styleguidist": "^8.0.6",
        "resolve-url-loader": "^3.0.0",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "stylelint": "^9.9.0",
        "stylelint-config-css-modules": "^1.3.0",
        "stylelint-config-prettier": "^4.0.0",
        "stylelint-config-standard": "^18.2.0",
        "stylelint-webpack-plugin": "^0.10.5",
        "webpack-bundle-analyzer": "^3.1.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && flow && jsinspect"
        }
    },
    "lint-staged": {
        "*.{css,scss}": [
            "stylelint"
        ],
        "*.js": [
            "eslint",
            "jest --findRelatedTests"
        ],
        "*.{js,json,css,scss,md,babelrc,eslintrc,prettierrc}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "collectCoverage": true,
        "setupTestFrameworkScriptFile": "<rootDir>/conf/jest.config.js",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^.+\\.(scss|css)$": "identity-obj-proxy",
            "^.+\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/conf/jest.file-mock.js"
        },
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    }
}
