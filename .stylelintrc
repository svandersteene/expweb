{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-css-modules",
        "stylelint-config-prettier"
    ],
    "rules": {
        "indentation": 4,
        "unit-whitelist": [
            ["rem", "em", "%", "vh", "vw", "s", "deg", "fr"],
            {
                "ignoreProperties": {
                    "px": ["font-size", "/^border/"]
                }
            }
        ],
        "at-rule-no-unknown": [ true, {
            "ignoreAtRules": [
                "value", "each", "for", "if", "else", "function", "return"
            ]
        }]
    }
}
